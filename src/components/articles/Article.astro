---
import type { Page, Post } from '../../types'
interface Props {
  article: Page | Post;
}

const { article } = Astro.props;
import ArticleContentHtml from './ArticleContent.astro'
import ArticleHeader from './ArticleHeader.astro'
import ArticleAboutAdamFooter from './ArticleAboutAdamFooter.astro'

// import { Comments } from '@/components/comments/Comments.astro'
import PageFooter from '../PageFooter.astro'
import BackToTop from './BackToTop.astro'
---


<article class="h-entry">
  <ArticleHeader article={article} />
  <ArticleContentHtml article={article} />
  <PageFooter>
    <ArticleAboutAdamFooter />
    <!-- <Comments article={article} /> -->
    <BackToTop />
  </PageFooter>
</article>