---
import type { Article } from '../../types'
interface Props {
  articles: Article[]
  year: number
}

const { articles, year } = Astro.props;
const count = articles.filter((a) => new Date(a.date).getFullYear() === year).length
---

<span class="text-sm font-semibold text-gray-400 dark:text-gray-200 block">
  {count} article{count === 1 ? '' : 's'}
</span>