---
import Tag from './Tag.astro'

const groups = [
  {
    name: 'Development',
    tags: ['code', 'design', 'javascript', 'product', 'ruby', 'tech'].sort(),
  },
  {
    name: 'Personal',
    tags: ['betterment', 'journal', 'photos', 'travel', 'year-in-review'].sort(),
  },
  {
    name: 'Misc',
    tags: ['personal-finance', 'fire', 'books', 'mindfulness', 'minimalism', 'interactive'].sort(),
  },
]
---

<div>
  <p class="font-handwriting text-4xl text-blue-700 mb-4">
    <a href="/blog/tags" class="decoration-yellow-300 underline underline-offset-4 hover:no-underline">
      Tags
    </a>
  </p>

  {groups.map((group) => (
    <div class="mb-3">
      <p class="font-semibold text-gray-600">{group.name}</p>
      <div class="space-y-1 ml-2">
        {group.tags.map((t) => (
          <Tag tag={t} />
        ))}
      </div>
    </div>
  ))}
</div>
