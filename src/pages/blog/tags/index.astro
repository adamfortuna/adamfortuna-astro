---
import BlogAboutCallout from '@/components/articles/BlogAboutCallout.astro'
import BlogLayout from "@/layouts/BlogLayout.astro"
import { getTags } from '@/lib/getTags'

const tags = await getTags()
---
<BlogLayout title="All Tags - Adam Fortuna" description="Every tag for every project.">
  <p class="font-handwriting text-3xl md:text-4xl lg:text-6xl text-blue-700 mb-2 flex flex-wrap items-baseline">
    <span>
      <a href="/blog" class="underline hover:no-underline">
        Blog
      </a>
    </span>
    <span class="text-2xl mx-2">/</span>
    <span>Tags</span>
  </p>
  
  <BlogAboutCallout />
  
  <div class="pt-4">
    {tags.map((tag) => (
      <p class="p-2">
        <a href={`/blog/tags/${tag.slug}`} class="link--blue">
          {tag.name} ({tag.count})
        </a>
      </p>
    ))}
  </div>
</BlogLayout>