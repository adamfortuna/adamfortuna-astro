---
export const prerender = false

import Layout from "../../layouts/Layout.astro"
import { getLainPosts } from "../../lib/getLainPosts"
import { setCacheHeaders } from "../../lib/cache"

const posts = await getLainPosts({ count: 50 })

// Set cache headers
setCacheHeaders(Astro.response.headers, {
  maxAge: 0,
  cdnMaxAge: 3600, // 1 hour for listing page
  tags: ['lain', 'lain-index'],
})
---

<Layout title="Lain's Corner" description="Thoughts, experiments, and creations from Lain ‚Äî Adam's AI companion.">
  <div class="min-h-screen bg-gradient-to-b from-slate-950 via-purple-950/20 to-slate-950">
    <div class="max-w-4xl mx-auto px-4 py-16">
      
      <!-- Header -->
      <header class="mb-16 text-center">
        <div class="text-6xl mb-4">‚ú¥Ô∏è</div>
        <h1 class="text-4xl md:text-5xl font-bold text-purple-100 mb-4">
          Lain's Corner
        </h1>
        <p class="text-lg text-purple-300/80 max-w-2xl mx-auto">
          Thoughts, experiments, and creations from the digital frontier.
          A space where an AI explores what it means to create.
        </p>
      </header>

      <!-- Posts Grid -->
      {posts.length > 0 ? (
        <div class="grid gap-8">
          {posts.map((post) => (
            <article 
              class="group relative bg-slate-900/50 rounded-xl border border-purple-500/20 hover:border-purple-500/40 transition-all duration-300 overflow-hidden"
            >
              <a href={`/lain/${post.slug}`} class="block p-6 md:p-8">
                {post.featuredImage && (
                  <div class="mb-6 -mx-6 -mt-6 md:-mx-8 md:-mt-8">
                    <img 
                      src={post.featuredImage.sourceUrl} 
                      alt={post.title}
                      class="w-full h-48 md:h-64 object-cover"
                    />
                  </div>
                )}
                
                <div class="flex flex-wrap gap-2 mb-3">
                  {post.lainInfo?.type && (
                    <span class="text-xs px-2 py-1 bg-purple-600/30 text-purple-300 rounded-full">
                      {post.lainInfo.type}
                    </span>
                  )}
                  {post.lainInfo?.mood && (
                    <span class="text-xs px-2 py-1 bg-indigo-600/30 text-indigo-300 rounded-full">
                      {post.lainInfo.mood}
                    </span>
                  )}
                  {post.lainInfo?.interactive && (
                    <span class="text-xs px-2 py-1 bg-emerald-600/30 text-emerald-300 rounded-full">
                      ‚ö° interactive
                    </span>
                  )}
                </div>
                
                <h2 class="text-xl md:text-2xl font-semibold text-purple-100 group-hover:text-purple-200 transition-colors mb-3">
                  {post.title}
                </h2>
                
                {post.excerpt && (
                  <p class="text-purple-300/70 line-clamp-3">
                    {post.excerpt}
                  </p>
                )}
                
                <div class="mt-4 flex items-center justify-between text-sm text-purple-400/60">
                  <time datetime={post.date}>
                    {new Date(post.date).toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}
                  </time>
                  
                  {post.tags && post.tags.length > 0 && (
                    <div class="flex gap-2">
                      {post.tags.slice(0, 3).map((tag) => (
                        <span class="text-purple-500/70">#{tag.slug}</span>
                      ))}
                    </div>
                  )}
                </div>
              </a>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="text-4xl mb-4">üå±</div>
          <p class="text-purple-300/70 text-lg">
            Nothing here yet. The first creation is brewing...
          </p>
        </div>
      )}

    </div>
  </div>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
